<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <Preference
        android:key="copy_bitcoin_address"
        android:title="Donate: Click to copy address"
        android:summary="13hwfZqGQrsNXEhx1riRpFog5JPdPJBLGH"/>

    <com.streetcred.bitcoinrealtimewidget.UpdateFrequencyDialog
        android:key="pref_freq"
        android:title="Update Frequency"
        android:dialogTitle="Select Update Interval"
        android:entries="@array/pref_interval_entries"
        android:entryValues="@array/pref_interval_values"
        android:defaultValue="4 minutes"
        android:summary="Currently updating every 4 minutes"
        android:negativeButtonText="Cancel"/>

    <com.streetcred.bitcoinrealtimewidget.DisplayCurrencyPreferenceDialog
        android:key="pref_currency"
        android:title="Display Currency: USD"
        android:dialogTitle="Select Currency To Display"
        android:entries="@array/pref_currency_entries"
        android:entryValues="@array/pref_currency_values"
        android:defaultValue="USD"
        android:negativeButtonText="Cancel"/>

</PreferenceScreen>