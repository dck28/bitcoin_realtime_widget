<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <Preference
        android:key="copy_bitcoin_address"
        android:title="Donate: Click to copy address"
        android:summary="13hwfZqGQrsNXEhx1riRpFog5JPd . . ."
        android:widgetLayout="@layout/icon_for_donation"/>

    <com.streetcred.bitcoinpriceindexwidget.DisplayLanguagePreferenceDialog
        android:key="pref_language"
        android:title="Language:"
        android:dialogTitle="Select Language"
        android:entries="@array/pref_language_entries"
        android:entryValues="@array/pref_language_values"
        android:defaultValue="English"
        android:negativeButtonText="Cancel"
        android:widgetLayout="@layout/icon_for_language"/>

    <com.streetcred.bitcoinpriceindexwidget.DisplayThemePreferenceDialog
        android:key="pref_theme"
        android:title="Widget Theme:"
        android:dialogTitle="Select Widget Theme"
        android:entries="@array/pref_theme_entries"
        android:entryValues="@array/pref_theme_values"
        android:defaultValue="Navy"
        android:negativeButtonText="Cancel"
        android:widgetLayout="@layout/icon_for_theme"/>

    <com.streetcred.bitcoinpriceindexwidget.DisplayCurrencyPreferenceDialog
        android:key="pref_currency"
        android:title="Display Currency: USD"
        android:dialogTitle="Select Currency"
        android:entries="@array/pref_currency_entries"
        android:entryValues="@array/pref_currency_values"
        android:defaultValue="USD"
        android:negativeButtonText="Cancel"
        android:widgetLayout="@layout/icon_for_currency"/>

    <com.streetcred.bitcoinpriceindexwidget.DisplayDataSourcePreferenceDialog
        android:key="pref_data_source"
        android:title="Data Source: Coindesk"
        android:dialogTitle="Select Data Source"
        android:entries="@array/pref_data_source_entries"
        android:entryValues="@array/pref_data_source_values"
        android:defaultValue="Coindesk"
        android:negativeButtonText="Cancel"
        android:widgetLayout="@layout/icon_for_sources"/>

</PreferenceScreen>