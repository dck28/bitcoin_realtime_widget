<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android" >

    <Preference
        android:key="copy_bitcoin_address"
        android:title="请支持: 复制比特币地址"
        android:summary="13hwfZqGQrsNXEhx1riRpFog5JPd . . ."
        android:widgetLayout="@layout/icon_for_donation"/>


    <com.streetcred.bitcoinpriceindexwidget.DisplayLanguagePreferenceDialog
        android:key="pref_language"
        android:title="语文:"
        android:dialogTitle="选择语文"
        android:entries="@array/pref_language_entries"
        android:entryValues="@array/pref_language_values"
        android:defaultValue="中文(简体)"
        android:negativeButtonText="取消"
        android:widgetLayout="@layout/icon_for_language"/>

    <com.streetcred.bitcoinpriceindexwidget.DisplayThemePreferenceDialog
        android:key="pref_theme_chinese_simplified"
        android:title="显示主题:"
        android:dialogTitle="选择显示主题"
        android:entries="@array/pref_theme_entries_chinese_simplified"
        android:entryValues="@array/pref_theme_values_chinese_simplified"
        android:defaultValue="深蓝"
        android:negativeButtonText="取消"
        android:widgetLayout="@layout/icon_for_theme"/>

    <com.streetcred.bitcoinpriceindexwidget.DisplayCurrencyPreferenceDialog
        android:key="pref_currency_chinese_simplified"
        android:title="显示货币:"
        android:dialogTitle="选择显示货币"
        android:entries="@array/pref_currency_entries_chinese_simplified"
        android:entryValues="@array/pref_currency_values_chinese_simplified"
        android:defaultValue="美元"
        android:negativeButtonText="取消"
        android:widgetLayout="@layout/icon_for_currency"/>

    <com.streetcred.bitcoinpriceindexwidget.DisplayDataSourcePreferenceDialog
        android:key="pref_data_source_chinese_simplified"
        android:title="数据来源:"
        android:dialogTitle="选择数据来源"
        android:entries="@array/pref_data_source_entries_chinese_simplified"
        android:entryValues="@array/pref_data_source_values_chinese_simplified"
        android:defaultValue="Coindesk"
        android:negativeButtonText="取消"
        android:widgetLayout="@layout/icon_for_sources"/>

</PreferenceScreen>